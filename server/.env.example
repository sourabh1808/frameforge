PORT=5000
NODE_ENV=development

# ===== DATABASE =====
# Option 1: MongoDB Atlas (Cloud - Recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/frameforge?retryWrites=true&w=majority

# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/frameforge

# ===== REDIS QUEUE =====
# Option 1: Upstash Redis (Cloud - Recommended)
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Option 2: Local Redis (Docker or native)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ===== GOOGLE AI STUDIO =====
# Get your API key: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-studio-api-key

# ===== CLOUD RENDERER (REQUIRED) =====
# Deploy the renderer to Google Cloud Run first
# See: CLOUD_RENDERER_SETUP.md
RENDERER_URL=https://manim-renderer-xxxxx-uc.a.run.app/render

# ===== AUTHENTICATION =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===== MISC =====
STORAGE_PATH=./storage/videos
CLIENT_URL=http://localhost:5173
